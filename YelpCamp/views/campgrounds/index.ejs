<% layout('layouts/boilerplate') %>
    <h1>All Campground</h1>
    <% for(let camp of camps){%>
        <div class="card">
            <div class="row">
                <div class="col-md-4">
                    <img src="<%=camp.image%>" class="img-fluid" alt="Campground Image">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%=camp.name%>
                        </h5>
                        <p class="card-text" class="text-muted">
                            <%=camp.location%>
                        </p>
                        <p class="card-text">
                            <%=camp.description%>
                        </p>
                        <a href="/campgrounds/<%=camp.id%>" class="btn btn-primary">Visit <%=camp.name%></a>
                    </div>
                </div>
            </div>
        </div>

        <% } %>