<% layout('layouts/boilerplate') %>
    <div class="row justify-content-center">
        <h1 class="text-center">New Campground</h1>
        <div class="col-6 mb-3">
            <form action="/campgrounds/<%=camp._id%>?_method=PUT" method="POST">
                <div class="mb-3">
                    <label for="name" class="form-label">Title</label>
                    <input type="text" class="form-control" id="title" name="title" value="<%=camp.name%>">
                </div>

                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" class="form-control" id="location" name="location" value="<%=camp.location%>">
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">Image Url</label>
                    <input type="text" class="form-control" id="image" name="image" value="<%=camp.image%>">
                </div>


                <label for="price" class="form-label">Campground Price</label>
                <div class="input-group mb-3">
                    <span class="input-group-text">$</span>
                    <input type="text" class="form-control" id="price" name="price" class="price" value="<%=camp.price%>">
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea class="form-control" id="description" name="description" rows="3"><%=camp.description%></textarea>
                </div>
                <button type="submit" class="btn btn-success">Add Campground</button>
            </form>
        </div>
    </div>